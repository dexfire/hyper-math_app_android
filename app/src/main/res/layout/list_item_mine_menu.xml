<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mine_menu_list_height"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/mine_menu_list_icon_size"
        android:layout_height="@dimen/mine_menu_list_icon_size"
        android:layout_margin="6dp"
        android:tint="@color/gray0_transparent_dark"
        android:textAppearance="?attr/textAppearanceListItem" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mine_menu_list_text_size"
        android:layout_margin="6dp"
        android:textAppearance="?attr/textAppearanceListItem" />
</LinearLayout>
